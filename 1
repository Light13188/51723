<script>

let answers = [];

function generateQuiz() {
    let quizDiv = document.getElementById("quiz");
    quizDiv.innerHTML = "";
    answers = [];

    for(let i=0;i<10;i++) {

        let type = Math.floor(Math.random()*3);
        let card = document.createElement("div");
        card.className = "card";

        if(type === 0) {
            let x = (Math.random()*10 - 5).toFixed(1);
            let ans = Math.floor(x);
            card.innerHTML = `<b>‡∏Ç‡πâ‡∏≠ ${i+1}</b> ‡∏à‡∏á‡∏´‡∏≤‡∏Ñ‡πà‡∏≤ f(x)=‚åäx‚åã ‡πÄ‡∏°‡∏∑‡πà‡∏≠ x=${x}<br>
                              <input type="number" id="q${i}">`;
            answers.push(ans);
        }

        else if(type === 1) {
            let a = Math.floor(Math.random()*3)+2;
            let x = Math.floor(Math.random()*4)-2;
            let ans = Math.pow(a,x);
            card.innerHTML = `<b>‡∏Ç‡πâ‡∏≠ ${i+1}</b> ‡∏à‡∏á‡∏´‡∏≤‡∏Ñ‡πà‡∏≤ f(x)=${a}^${x}<br>
                              <input type="number" step="any" id="q${i}">`;
            answers.push(ans);
        }

        else {
            let a = Math.floor(Math.random()*2)+2;
            let ans = Math.pow(a,1);

            card.innerHTML = `<b>‡∏Ç‡πâ‡∏≠ ${i+1}</b> ‡∏à‡∏≤‡∏Å‡∏Å‡∏£‡∏≤‡∏ü f(x)=${a}^x ‡∏à‡∏á‡∏´‡∏≤‡∏Ñ‡πà‡∏≤‡πÄ‡∏°‡∏∑‡πà‡∏≠ x=1<br>
                              <canvas id="chart${i}" width="300" height="200"></canvas>
                              <br><input type="number" step="any" id="q${i}">`;

            setTimeout(()=>createChart(`chart${i}`,a),100);
            answers.push(ans);
        }

        quizDiv.appendChild(card);
    }
}

function createChart(id,a){
    let xVals=[];
    let yVals=[];
    for(let x=-2;x<=2;x++){
        xVals.push(x);
        yVals.push(Math.pow(a,x));
    }

    new Chart(document.getElementById(id),{
        type:'line',
        data:{
            labels:xVals,
            datasets:[{
                label:`f(x)=${a}^x`,
                data:yVals,
                borderWidth:2,
                fill:false
            }]
        },
        options:{ responsive:false }
    });
}

function checkAnswers(){
    let score=0;
    let solutionText="";

    for(let i=0;i<10;i++){
        let userAns=document.getElementById(`q${i}`).value;
        let correct=answers[i];

        if(Math.abs(userAns-correct)<0.01){
            score++;
            solutionText+=`<p class="correct">‡∏Ç‡πâ‡∏≠ ${i+1} ‡∏ñ‡∏π‡∏Å ‚úî (‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö: ${correct})</p>`;
        }else{
            solutionText+=`<p class="wrong">‡∏Ç‡πâ‡∏≠ ${i+1} ‡∏ú‡∏¥‡∏î ‚úò (‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å: ${correct})</p>`;
        }
    }

    document.getElementById("result").innerHTML=
        `<h3>‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ: ${score} / 10</h3>`;

    document.getElementById("solutions").innerHTML=solutionText;

    document.getElementById("explanation").innerHTML = `
    <h3>üìö ‡∏™‡∏£‡∏∏‡∏õ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏£‡∏π‡πâ</h3>
    <p><b>‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ö‡∏±‡∏ô‡πÑ‡∏î (Step Function)</b> ‡∏Ñ‡∏∑‡∏≠‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏Ñ‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏ä‡πà‡∏ß‡∏á ‡πÜ ‡πÑ‡∏°‡πà‡∏ï‡πà‡∏≠‡πÄ‡∏ô‡∏∑‡πà‡∏≠‡∏á 
    ‡πÄ‡∏ä‡πà‡∏ô f(x)=‚åäx‚åã ‡∏Ñ‡∏∑‡∏≠‡∏Å‡∏≤‡∏£‡∏õ‡∏±‡∏î‡πÄ‡∏®‡∏©‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏ï‡πá‡∏° ‡∏Å‡∏£‡∏≤‡∏ü‡∏à‡∏∞‡∏°‡∏µ‡∏•‡∏±‡∏Å‡∏©‡∏ì‡∏∞‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏Ç‡∏±‡πâ‡∏ô‡∏ö‡∏±‡∏ô‡πÑ‡∏î</p>

    <p><b>‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏≠‡πá‡∏Å‡∏ã‡πå‡πÇ‡∏û‡πÄ‡∏ô‡∏ô‡πÄ‡∏ä‡∏µ‡∏¢‡∏• (Exponential Function)</b> ‡∏Ñ‡∏∑‡∏≠‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÉ‡∏ô‡∏£‡∏π‡∏õ f(x)=a^x 
    ‡πÇ‡∏î‡∏¢‡∏ó‡∏µ‡πà a > 0 ‡πÅ‡∏•‡∏∞ a ‚â† 1 ‡∏ñ‡πâ‡∏≤ a > 1 ‡∏Å‡∏£‡∏≤‡∏ü‡∏à‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡∏∂‡πâ‡∏ô‡∏£‡∏ß‡∏î‡πÄ‡∏£‡πá‡∏ß 
    ‡∏ñ‡πâ‡∏≤ 0 < a < 1 ‡∏Å‡∏£‡∏≤‡∏ü‡∏à‡∏∞‡∏•‡∏î‡∏•‡∏á ‡∏°‡∏±‡∏Å‡πÉ‡∏ä‡πâ‡πÉ‡∏ô‡πÄ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏ï‡∏¥‡∏ö‡πÇ‡∏ï‡πÅ‡∏•‡∏∞‡∏Å‡∏≤‡∏£‡∏™‡∏•‡∏≤‡∏¢‡∏ï‡∏±‡∏ß</p>
    `;
}

generateQuiz();

</script>

